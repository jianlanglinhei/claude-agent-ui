{
  "name": "claude-agent-desktop",
  "description": "Browser-based UI + Bun HTTP/SSE server for Claude Agent SDK",
  "type": "module",
  "version": "0.1.3",
  "license": "MIT",
  "packageManager": "bun@1.3.2",
  "scripts": {
    "dev": "bun run dev:single",
    "dev:web": "vite",
    "dev:single": "bun run build:web --watch & bun run server",
    "build:web": "vite build",
    "server": "bun src/server/index.ts",
    "start": "bun run build:web && bun run server",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --cache-location .eslintcache --max-warnings=0",
    "test": "bun test",
    "format": "prettier --experimental-cli --write .",
    "format:check": "prettier --experimental-cli --check --log-level warn .",
    "clean": "rm -rf node_modules dist .turbo .eslintcache *.tsbuildinfo"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-arborist": "^3.4.3",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.1.12"
  }
}
